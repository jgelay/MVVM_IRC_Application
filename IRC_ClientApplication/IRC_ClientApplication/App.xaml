<Application x:Class="IRC_ClientApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IRC_ClientApplication"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type local:ConnectViewModel}">
            <local:ConnectView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:RegisterViewModel}">
            <local:RegisterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ChatViewModel}">
            <local:ChatView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:MainWindowViewModel}">
            <local:MainWindowView/>
        </DataTemplate>
    </Application.Resources>
</Application>
